---
const footerLinks = [
  { href: '/', label: 'Home' },
  { href: '/over-ons/', label: 'Over ons' },
  { href: '/agenda/', label: 'Agenda' },
  { href: '/reglementen/', label: 'Reglementen' },
  { href: '/contact/', label: 'Contact' },
];
---

<footer class="bg-navy-900 text-white">
  <div class="mx-auto max-w-6xl px-4 py-12">
    <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
      <!-- Column 1: Contact -->
      <div>
        <h3 class="text-lg font-semibold mb-4">Contact</h3>
        <address class="not-italic text-navy-200 text-sm leading-relaxed">
          <p>Singel 5</p>
          <p>2965BC Nieuwpoort</p>
          <p class="mt-3">
            <a
              href="mailto:bestuur@delekschutters.nl"
              class="hover:text-white transition-colors duration-200"
            >
              bestuur@delekschutters.nl
            </a>
          </p>
        </address>
      </div>

      <!-- Column 2: Openingstijden -->
      <div>
        <h3 class="text-lg font-semibold mb-4">Openingstijden</h3>
        <div class="text-navy-200 text-sm leading-relaxed">
          <p>Maandag 19:30 â€“ 22:30</p>
          <p class="mt-3">En op aangekondigde evenementen</p>
        </div>
      </div>

      <!-- Column 3: Links -->
      <div>
        <h3 class="text-lg font-semibold mb-4">Links</h3>
        <nav class="flex flex-col gap-2" aria-label="Footer navigatie">
          {footerLinks.map((link) => (
            <a
              href={link.href}
              class="text-navy-200 text-sm hover:text-white transition-colors duration-200"
            >
              {link.label}
            </a>
          ))}
        </nav>
        <p class="mt-4 text-navy-300 text-sm">Lid van K.N.S.A.</p>
      </div>
    </div>
  </div>

  <!-- Bottom bar -->
  <div class="border-t border-navy-800">
    <div class="mx-auto max-w-6xl px-4 py-4">
      <p class="text-center text-navy-400 text-sm">
        &copy; 2026 SV de Lekschutters. Alle rechten voorbehouden.
      </p>
    </div>
  </div>
</footer>
