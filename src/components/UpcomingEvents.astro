---
const events = [
  { date: '14 februari', name: 'Service pistool competitie' },
  { date: '14 maart', name: 'Thema wedstrijd' },
  { date: '11 april', name: 'Service pistool competitie' },
  { date: '16 mei', name: 'Thema wedstrijd' },
];
---

<section class="py-16 bg-warm-50">
  <div class="max-w-6xl mx-auto px-4">
    <h2 class="text-3xl font-bold text-navy-900 mb-8 text-center">Agenda</h2>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
      {events.map((event) => (
        <div class="bg-white rounded-lg shadow-sm p-6 border border-navy-100">
          <p class="text-sm font-semibold text-red-500 mb-1">{event.date}</p>
          <p class="text-lg font-medium text-navy-900">{event.name}</p>
        </div>
      ))}
    </div>
    <div class="text-center mt-8">
      <a href="/agenda" class="text-red-500 hover:text-red-600 font-semibold">
        Bekijk de volledige agenda &rarr;
      </a>
    </div>
  </div>
</section>
