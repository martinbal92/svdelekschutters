---
import BaseLayout from '../layouts/BaseLayout.astro';

const events = [
  { date: 'Vrijdag 14 februari', name: 'Service pistool competitie', type: 'competitie' },
  { date: 'Vrijdag 14 maart', name: 'Thema wedstrijd', type: 'thema' },
  { date: 'Vrijdag 11 april', name: 'Service pistool competitie', type: 'competitie' },
  { date: 'Vrijdag 16 mei', name: 'Thema wedstrijd, thema volgt', type: 'thema' },
  { date: 'Vrijdag 13 juni', name: 'Service pistool competitie', type: 'competitie' },
  { date: 'Vrijdag 1 augustus', name: 'BBQ', type: 'sociaal' },
  { date: '4 augustus t/m 1 september', name: 'Vereniging gesloten', type: 'info' },
  { date: 'Vrijdag 12 september', name: 'Service pistool competitie', type: 'competitie' },
  { date: 'Vrijdag 17 oktober', name: 'Service pistool competitie', type: 'competitie' },
  { date: 'Vrijdag 14 november', name: 'Thema wedstrijd, thema volgt', type: 'thema' },
  { date: 'Vrijdag 12 december', name: 'Thema wedstrijd, thema volgt', type: 'thema' },
  { date: 'Vrijdag 9 januari 2026', name: 'Nieuwjaarsreceptie', type: 'sociaal' },
];

const badgeColors: Record<string, string> = {
  competitie: 'bg-red-500',
  thema: 'bg-navy-500',
  sociaal: '',
  info: 'bg-navy-300',
};
---

<BaseLayout
  title="Agenda â€” SV de Lekschutters"
  description="Bekijk de agenda en mededelingen van SV de Lekschutters. Competities, thema-avonden en evenementen."
>
  <!-- Page header -->
  <section class="bg-navy-900 text-white py-16">
    <div class="max-w-6xl mx-auto px-4">
      <h1 class="text-4xl font-bold">Agenda & Mededelingen</h1>
      <p class="text-xl text-navy-200 mt-2">Competities, wedstrijden en evenementen</p>
    </div>
  </section>

  <!-- Agenda 2025 -->
  <section class="py-16 bg-white">
    <div class="max-w-6xl mx-auto px-4">
      <h2 class="text-2xl font-bold text-navy-900 mb-8">Agenda 2025</h2>

      <div>
        {events.map((event) => (
          <div
            class:list={[
              'bg-warm-50 rounded-lg p-4 mb-3 flex items-center gap-4',
              event.name === 'Vereniging gesloten' && 'opacity-60 italic',
            ]}
          >
            {event.type === 'sociaal' ? (
              <div class="w-3 h-3 rounded-full flex-shrink-0" style="background-color: #22c55e;"></div>
            ) : (
              <div class:list={['w-3 h-3 rounded-full flex-shrink-0', badgeColors[event.type]]}></div>
            )}
            <div>
              <div class="text-sm font-medium text-navy-600">{event.date}</div>
              <div class="text-lg font-medium text-navy-900">{event.name}</div>
            </div>
          </div>
        ))}
      </div>

      <!-- Info section -->
      <div class="mt-8 bg-navy-50 rounded-lg p-6">
        <div class="space-y-3 text-navy-700">
          <p>Alle wedstrijden beginnen om 19.30 uur.</p>
          <p>De service pistool wedstrijden worden geschoten in klein en groot kaliber. Er worden 5 wedstrijden service pistool geschoten, waarvan de 4 hoogste tellend zijn voor de einduitslag.</p>
          <p class="font-bold">Bij elke wedstrijd zijn er natuurlijk bitterballen!</p>
        </div>
      </div>
    </div>
  </section>

  <!-- Mededelingen -->
  <section class="py-16 bg-warm-50">
    <div class="max-w-6xl mx-auto px-4">
      <h2 class="text-2xl font-bold text-navy-900 mb-8">Mededelingen</h2>
      <p class="text-navy-600 italic">Er zijn momenteel geen nieuwe mededelingen.</p>
    </div>
  </section>
</BaseLayout>
